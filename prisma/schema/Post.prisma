model Post {
  id String @id @default(cuid()) // PK
  user_id String // FK
  title String
  content String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user User @relation(fields: [user_id], references: [id]) // 1:N, 하나의 유저는 여러개의 포스트를 가질 수 있다.
  likes Like[] // 1:N, 하나의 포스트는 여러개의 좋아요를 가질 수 있다.
  comments Comment[] // 1:N, 하나의 포스트는 여러개의 댓글을 가질 수 있다.

  @@map("posts")
}