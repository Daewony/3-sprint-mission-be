generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        String      @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  MarketComment MarketComment[]
}

model BoardArticle {
  id        String      @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  BoardComment BoardComment[]
}


model User {
  id        String      @id @default(uuid())
  nickname  String

  MarketComment MarketComment[]
  BoardComment  BoardComment[]
}

model MarketComment {
  id       String      @id @default(uuid())
  content  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User        @relation(fields: [userId], references: [id])
  userId  String

  article Article @relation(fields: [articleId], references: [id])
  articleId String
}

model BoardComment {
  id       String      @id @default(uuid())
  content  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User        @relation(fields: [userId], references: [id])
  userId  String

  boardArticle BoardArticle @relation(fields: [articleId], references: [id])
  articleId String
}
